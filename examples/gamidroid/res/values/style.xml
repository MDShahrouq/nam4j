<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="TitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="SubTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="TopInputStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/top_input_text_style</item>
    </style>
    
    <style name="ButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    
    <style name="MessageStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="ListViewMessageStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="ListViewStyle">
         <item name="android:divider">#B6B6B6</item>
         <item name="android:dividerHeight">1dp</item>
    </style>
    
    <style name="TopInputLabelStyle">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/top_input_label_style</item>
    </style>
    
    <style name="MiddleInputLabelStyle">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/middle_input_label_style</item>
    </style>
    
    <style name="BottomInputLabelStyle">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/bottom_input_label_style</item>
    </style>
    
</resources>