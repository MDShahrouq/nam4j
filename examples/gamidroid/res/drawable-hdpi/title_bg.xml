<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            
            <!-- Bottom border color -->
            <stroke
                android:width="1dp"
                android:color="#B6B6B6" />

            <!-- Background color -->
            <solid android:color="#3F9BBF" />

            <padding
                android:bottom="0dp"
                android:left="10dp"
                android:right="10dp"
                android:top="0dp" >
            </padding>
        </shape>
    </item>

</layer-list>